<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
    <header class="navigation">
        <nav>
            <ul class="main-navigation">
                <li class="navigation-icons search-container">
                    <div class="menu-icon">
                        <a class="navigation-logo-link" onclick="openMenu()">
                            <img src="~/icons/menu-icon.svg" alt="menu icon">
                        </a>
                    </div>
                    <div class="desktop-link search">
                        <a class="navigation-logo-link" onclick="OpenSearch()">
                            <img src="~/icons/search-icon.svg" alt="search icon">
                            <span class="word search-word">Search</span>
                        </a>
                        <div id="search-overlay" class="search-area">
                            <div class="search-area-container">
                                <div class="search-items">
                                    <div class="search-close-button">
                                        <button class="close-button" type="button" onclick="CloseSearch()">
                                            <img src="~/icons/cross.svg" alt="cross icon">
                                        </button>
                                    </div>
                                    <div class="search-form-container">
                                        @* Need to add link to search result page *@
                                        <form class="search-form">
                                            <input type="text" name="search" placeholder="Search...">
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="title">
                    <a asp-page="/Index">
                        <h1>Stationery</h1>
                    </a>
                </li>

                <li class="navigation-icons">
                    <div class="desktop-link">
                        @* Need to add link to login page *@
                        <a href="#" class="navigation-logo-link">
                            <img src="~/icons/user-icon.svg" alt="user account icon">
                            <span class="word">Login</span>
                        </a>
                    </div>
                    <div class="desktop-link">
                        @* Need to add link to cart page *@
                        <a href="#" class="navigation-logo-link">
                            <img src="~/icons/shopping-bag-icon.svg" alt="cart icon">
                            <span class="word">Your Bag</span>
                        </a>
                    </div>
                </li>
            </ul>

            <div id="product-menu-overlay" class="menu-overlay">
                <div class="menu-overlay-content">
                    <div class="menu-overlay-close-button">
                        <button class="close-button" type="button" onclick="closeMenu()">
                            <img src="~/icons/cross.svg" alt="cross icon">
                        </button>
                    </div>

                    <ul class="product-navigation">
                        @* Add links to each <a> tag, pointing to their respective pages.  *@
                        <li class="login">
                            <a href="#">login</a>
                        </li>
                        <li>
                            <a href="#">Paper Products</a>
                        </li>
                        <li>
                            <a href="#">Writing Instruments</a>
                        </li>
                        <li>
                            <a href="#">Desk Accessories</a>
                        </li>
                        <li>
                            <a href="#">Art Supplies</a>
                        </li>
                        <li>
                            <a href="#">Office Electronics</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <section>
            <div class="container">
                <ul>
                    <li class="heading">Contact</li>
                    <li>
                        <a href="#">Contact Us</a>
                    </li>
                </ul>
                <ul>
                    <li class="heading">Company</li>
                    <li>
                        <a href="#">About Us</a>
                    </li>
                </ul>
            </div>
        </section>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
