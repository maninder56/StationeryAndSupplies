@page
@model StationeryAndSuppliesWebApp.Pages.Account.UserDetailsModel
@{
    Layout = "_ProfileNavigationLayout"; 
    ViewData["Title"] = "User Details"; 
}

<section class="user-details-section">
    @if(Model.UserDetails is null)
    {
        <div>Unable to load use Details, Please try again later.</div>
    }
    else
    {
        <div>Name : @Model.UserDetails.UserName</div>
        <div>Email: @Model.UserDetails.Email</div>
        <div>Phone Number: @Model.UserDetails.Phone</div>
    }
</section>
