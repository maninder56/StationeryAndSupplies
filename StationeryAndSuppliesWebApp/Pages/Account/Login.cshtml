@page
@model StationeryAndSuppliesWebApp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "LogIn";

    string retrunUrl = Model.ReturnUrl ?? "/"; 
}

<article class="login-page">
    <section class="login-section">
        <div class="login-container">
            <header class="title">Login</header>
            @if (Model.ValidationMessage is not null)
            {
                <div class="validation-message">@Model.ValidationMessage</div>
            }
            <form method="post">
                <input asp-for="ReturnUrl" type="hidden" value="@retrunUrl" />
                <div class="input-container form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" />
                </div>
                <div class="input-container form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" />
                </div>
                <div class="form-group">
                    @* link to reset password page *@
                    <a asp-page="/Account/ResetPassword" class="forgot-password-link">Forgot password</a>
                </div>
                <div class="form-group login-create-account-container">
                    @* Link to Create account page *@
                    <a asp-page="/Account/CreateAccount" class="create-account-link transparent-black-button">Create Account</a>
                    <button type="submit" class="login-button black-button">Log in</button>
                </div>
            </form>
        </div>
    </section>
</article>